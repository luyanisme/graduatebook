<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="ResetPasswordBoard_iPhone">
    <row class="wrapper">
        <image class="bg_color"/>
        <row class="title_content">
            <label class="title_bgcolor"/>
            <button id="passwdBack" class="resetPd_back"/>
            <image class="return_image"/>
            <label id="titleName" class="title_name">重置密码</label>
            <button id="confirm" class="confirm">确定</button>
        </row>
        <row class="name_content">
            <row class="phone_content">
                <image class="bg_image"/>
                <input id="resetPasswd" class="phone_input" placeholder=" 新密码" />
            </row>
            
            <row class="phone_content">
                <image class="bg_image"/>
                <input id="resettPasswdAgain" class="phone_input done" placeholder=" 再次输入新密码"/>
            </row>
            
            
            
            
        </row>
    </row>
    
    <style type="text/css">
        .wrapper {
        width: 100%;
        height: 100%;
        }
        .bg_color{
        width:100%;
        height:100%;
        position:absolute;
        background-color:#E2E3E5;
        }
        .title_content{
        width:100%;
        height:64px;
        }
        .title_bgcolor{
        position:absolute;
        width:100%;
        height:100%;
        background-color:#2ECC71;
        }
        .resetPd_back{
        width:50px;
        height:100%;
        }
        .return_image{
        width:20px;
        height:20px;
        left:10px;
        top:32px;
        position:absolute;
        image:url(left_arrow.png);
        mode:fit;
        }
        .title_name{
        margin-top:20px;
        color:white;
        width:100%;
        height:44px;
        font-size:18px;
        font-weight:bold;
        text-align:center;
        position:absolute;
        }
        .confirm{
        width:70px;
        height:30px;
        top:27px;
        position:absolute;
        right:0px;
        font:16px;
        text-align:right;
        }
        .name_content{
        width:100%;
        height:64px;
        }
        .phone_content{
        margin-top:20px;
        width:100%;
        height:35px;
        padding-left:15px;
        padding-right:15px;
        }
        .bg_image{
        width:100%;
        height:100%;
        background-color:white;
        position:absolute;
        float:center;
        border-radius:5px;
        }
        
        .phone_input{
        width:100%;
        height:34px;
        margin-left:5px;
        font:16px;
        input-capitalization: none;
        input-correction: false;
        input-clear: editing;
        input-return-key: next;
        input-secure: yes;
        }
        .code_input{
        width:50%;
        height:34px;
        font:16px;
        input-capitalization: none;
        input-correction: false;
        input-clear: editing;
        input-secure: yes
        }

        .done {
        input-return-key: done;
        }
    </style>
</ui>
